@model Issues.Web.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

    <h1>Issues</h1>
    @for (int i = 0; i < Model.Issues.Count(); i++)
    {
        <div class="row">
            <div class="col-md-6">
                <h2 style="word-wrap: break-word">@Model.Issues.ElementAt(i).Title</h2>
                <div>
                    <strong>Status: </strong> @Model.Issues.ElementAt(i).Status
                </div>
                <div>
                    <strong>Assessment: </strong> @Model.Issues.ElementAt(i).Time
                </div>
                <div>
                    <strong>Description: </strong> @Model.Issues.ElementAt(i).Description
                </div>
                <div>
                    <strong>Created by: </strong> @Model.Issues.ElementAt(i).CreatedBy.Email
                </div>
                <div>
                    <strong>Assigned to: </strong> @Model.Issues.ElementAt(i).AssignedTo.Email
                </div>
            </div>
        </div>
    }