@using PagedList
@using PagedList.Mvc
@model IPagedList<Issues.Web.ViewModels.IssueViewModel>

<h1>Issues</h1>
@for (int i = 0; i < Model.ToList().Count(); i++)
{
    <div class="row">
        <div class="col-md-6">
            <h2 style="word-wrap: break-word">@Model.ToList().ElementAt(i).Title</h2>
            <div>
                <strong>Status: </strong> @Model.ToList().ElementAt(i).Status
            </div>
            <div>
                <strong>Assessment: </strong> @Model.ToList().ElementAt(i).Time
            </div>
            <div>
                <strong>Description: </strong> @Model.ToList().ElementAt(i).Description
            </div>
            <div>
                <strong>Created by: </strong> @Model.ToList().ElementAt(i).CreatedBy.Email
            </div>
            <div>
                <strong>Assigned to: </strong> @Model.ToList().ElementAt(i).AssignedTo.Email
            </div>
        </div>
    </div>
}

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))